<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.administrator.joke.Login_Activity">


    <FrameLayout
        android:id="@+id/Login"
        android:layout_below="@+id/DengLuBiaoti"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white"
        android:orientation="horizontal">



        <de.hdodenhof.circleimageview.CircleImageView
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/mao"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/Yonghu"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/manng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Login"/>

        <EditText
            android:textColorHint="@color/ziti"
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_username"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/LayoutPassword"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/Yonghu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>


        <EditText
            android:textColorHint="@color/ziti"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:id="@+id/edtPassword"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"/>

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/ImgPassword"
            android:src="@drawable/dark"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right|center_vertical"/>


    </FrameLayout>

    <Button
        android:id="@+id/btnNoPassWord"
        android:textColor="@color/ziti"
        style="@android:style/DeviceDefault.ButtonBar"
        android:background="@color/Button"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/LayoutPassword"
        android:layout_marginTop="20dp"/>
    <FrameLayout
        android:id="@+id/frame"
        android:paddingBottom="30dp"
        android:layout_below="@+id/btnNoPassWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/btnNoPassWord"
            android:layout_marginTop="30dp"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="       第三方登录       "
            android:paddingTop="23dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/TuBiao"
        android:layout_below="@+id/btnNoPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Laydisanfang"
        android:layout_below="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/xinglang"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_alignStart="@+id/youxian"
            />

        <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:src="@drawable/qq"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_above="@+id/checkBox"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:src="@drawable/renren"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/disanfang"
        android:layout_below="@+id/btnNoPassWord"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <CheckBox
        android:textColor="@color/ziti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我同意,《第三方软件协议》"
        android:id="@+id/checkBox"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"/>




</RelativeLayout>
